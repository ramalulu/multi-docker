{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name" : "client",
      "image" : "ralfmason/multi-client",
      "hostname" : "client",
      "essential" : false
    },
    {
      "name" : "server",
      "image" : "ralfmason/multi-server",
      "hostname" : "api",
      "essential" : false
    },
    {
      "name" : "worker",
      "image" : "ralfmason/multi-worker",
      "hostname" : "worker",
      "essential" : false
    },
    {
      "name": "nginx",
      "image": "ralfmason/multi-nginx",
      "essential": true,
      "portMappings" : [
        {
          "hostPort" : 80,
          "containerPort" : 80
        }
      ],
      "links" : ["client", "server"]
    }
  ]
}
